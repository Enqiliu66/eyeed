{
  "version": 2,
  "buildCommand": "",  
  "outputDirectory": "docs",
  "public": true,

  "functions": {
    "api/gh-eye.js": {
      "runtime": "edge",
      "memory": 128,
      "maxDuration": 10
    }
  },

  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/index.html",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "public, max-age=60, s-maxage=300"
      }
    },
    {
      "src": "/api/gh-eye",
      "dest": "api/gh-eye.js"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg))$",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ]
}
