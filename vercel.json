{
  "version": 2,
  "public": true,
  "builds": [
    
    {
      "src": "api/gh-eye.js",
      "use": "@vercel/node",
      "config": { "nodejs": "18.x" }  
    },
    
    {
      "src": "docs/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
   
    {
      "src": "/api/gh-eye",
      "dest": "api/gh-eye.js",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
   
    {
      "src": "/",
      "dest": "docs/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "docs/$1"
    }
  ]
}
    
